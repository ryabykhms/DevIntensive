<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <!--User Info item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_medial_24"
            android:paddingTop="@dimen/spacing_medial_24">

            <LinearLayout
                style="@style/container">

                <TextView
                    style="@style/text.title"
                    android:text="@string/rating_number"/>

                <TextView
                    style="@style/text"
                    android:text="@string/rating_text"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/line_size"
                android:layout_height="@dimen/line_height"
                android:background="@color/grey_light"/>

            <LinearLayout
                style="@style/container">

                <TextView
                    style="@style/text.title"
                    android:text="@string/count_code_number"/>

                <TextView
                    style="@style/text"
                    android:text="@string/count_code_text"/>
            </LinearLayout>

            <View
                android:layout_width="@dimen/line_size"
                android:layout_height="@dimen/line_height"
                android:background="@color/grey_light"/>

            <LinearLayout
                style="@style/container">

                <TextView
                    style="@style/text.title"
                    android:text="@string/project_number"/>

                <TextView
                    style="@style/text"
                    android:text="@string/project_text"/>
            </LinearLayout>

        </LinearLayout>


        <!--Phone item-->
        <LinearLayout
            style="@style/item">

            <ImageView
                style="@style/icon.left"
                android:contentDescription="@string/phone_call_icon"
                android:src="@drawable/ic_call_24dp"/>

            <LinearLayout
                style="@style/item_center">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/phone_et"
                        style="@style/item_center_text"
                        android:hint="@string/phone_hint"
                        android:inputType="phone"
                        android:text="@string/phone_text"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:contentDescription="@string/phone_call_talk_icon"
                android:src="@drawable/ic_phone_in_talk_24dp"/>
        </LinearLayout>

        <View
            style="@style/separator"/>

        <!--Email item-->
        <LinearLayout
            style="@style/item">

            <ImageView
                style="@style/icon.left"
                android:contentDescription="@string/email_icon"
                android:src="@drawable/ic_email_24dp"/>

            <LinearLayout
                style="@style/item_center">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email_et"
                        style="@style/item_center_text"
                        android:hint="@string/email_hint"
                        android:inputType="textEmailAddress"
                        android:text="@string/email_text"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:contentDescription="@string/email_send_icon"
                android:src="@drawable/ic_send_24dp"/>
        </LinearLayout>

        <View
            style="@style/separator"/>

        <!--VK item-->
        <LinearLayout
            style="@style/item">

            <ImageView
                style="@style/icon.left"
                android:contentDescription="@string/email_icon"
                android:src="@drawable/ic_vk_circle_24dp"/>

            <LinearLayout
                style="@style/item_center">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/vk_et"
                        style="@style/item_center_text"
                        android:hint="@string/vk_hint"
                        android:inputType="text"
                        android:text="@string/vk_text"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:contentDescription="@string/email_send_icon"
                android:src="@drawable/ic_visibility_24dp"/>
        </LinearLayout>

        <View
            style="@style/separator"/>

        <!--Git item-->
        <LinearLayout
            style="@style/item">

            <ImageView
                style="@style/icon.left"
                android:contentDescription="@string/email_icon"
                android:src="@drawable/ic_github_circle_24dp"/>

            <LinearLayout
                style="@style/item_center">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/git_et"
                        style="@style/item_center_text"
                        android:hint="@string/git_hint"
                        android:inputType="text"
                        android:text="@string/git_text"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:contentDescription="@string/email_send_icon"
                android:src="@drawable/ic_visibility_24dp"/>
        </LinearLayout>

        <View
            style="@style/separator"/>

        <!--About item-->
        <LinearLayout
            style="@style/item">

            <ImageView
                style="@style/icon.left"
                android:contentDescription="@string/email_icon"
                android:src="@drawable/ic_account_circle_24dp"/>

            <LinearLayout
                style="@style/item_center"
                android:layout_marginRight="@dimen/spacing_medium_32">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/about_et"
                        style="@style/item_center_text"
                        android:hint="@string/about_hint"
                        android:text="@string/about_text"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/separator"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

