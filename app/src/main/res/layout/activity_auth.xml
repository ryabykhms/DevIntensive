<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center"
    android:paddingBottom="@dimen/spacing_medium_32"
    android:paddingLeft="@dimen/spacing_medium_32"
    android:paddingRight="@dimen/spacing_medium_32"
    tools:context="com.softdesign.devintensive.ui.activities.AuthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/almost_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_medial_24"
        android:paddingTop="@dimen/spacing_medial_24"
        android:layout_marginLeft="@dimen/spacing_medial_24"
        android:layout_marginRight="@dimen/spacing_medial_24"
        android:elevation="@dimen/spacing_normal_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/rect"
                android:layout_width="5dp"
                android:layout_height="@dimen/spacing_medial_24"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/red"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/rect"
                android:layout_marginLeft="@dimen/spacing_medial_24"
                android:layout_marginRight="@dimen/spacing_medial_24"
                android:fontFamily="sans-serif-medium"
                android:text="@string/auth_enter"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_16"/>
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medial_24"
            android:layout_marginRight="@dimen/spacing_medial_24"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:fontFamily="sans-serif-condensed"
            android:textColorHint="@color/grey_light">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/email_text"
                android:hint="@string/email_hint"
                android:textColor="@color/grey"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medial_24"
            android:layout_marginRight="@dimen/spacing_medial_24"
            android:fontFamily="sans-serif-condensed"
            android:textColorHint="@color/grey_light">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:hint="@string/password_hint"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:background="@color/red"
            android:text="@string/auth_enter"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/forgot_password"
            android:textColor="@color/grey_light"/>
    </LinearLayout>
</RelativeLayout>
