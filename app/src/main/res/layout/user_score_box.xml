<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/spacing_medial_24"
    android:paddingTop="@dimen/spacing_medial_24"
    app:layout_behavior=".utils.ScoreboxBehavior">

    <LinearLayout
        style="@style/container">

        <TextView
            style="@style/text.title"
            android:text="@string/rating_number"/>

        <TextView
            style="@style/text"
            android:text="@string/rating_text"/>
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_size"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"/>

    <LinearLayout
        style="@style/container">

        <TextView
            style="@style/text.title"
            android:text="@string/count_code_number"/>

        <TextView
            style="@style/text"
            android:text="@string/count_code_text"/>
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_size"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"/>

    <LinearLayout
        style="@style/container">

        <TextView
            style="@style/text.title"
            android:text="@string/project_number"/>

        <TextView
            style="@style/text"
            android:text="@string/project_text"/>
    </LinearLayout>

</LinearLayout>