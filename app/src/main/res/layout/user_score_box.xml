<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/spacing_medial_24"
    android:paddingTop="@dimen/spacing_medial_24"
    app:layout_behavior=".ui.view.behaviors.ScoreBoxBehavior">

    <LinearLayout
        style="@style/container">

        <TextView
            android:id="@+id/user_info_rait_txt"
            style="@style/text.title"
            android:text="@string/profile.user_score.rait.dummy"/>

        <TextView
            style="@style/text"
            android:text="@string/profile.user_score.rait.hint"/>
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_size"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"/>

    <LinearLayout
        style="@style/container">

        <TextView
            android:id="@+id/user_info_code_lines_txt"
            style="@style/text.title"
            android:text="@string/profile.user_score.code_lines.dummy"/>

        <TextView
            style="@style/text"
            android:text="@string/profile.user_score.code_lines.hint"/>
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_size"
        android:layout_height="@dimen/line_height"
        android:background="@color/grey_light"/>

    <LinearLayout
        style="@style/container">

        <TextView
            android:id="@+id/user_info_project_txt"
            style="@style/text.title"
            android:text="@string/profile.user_score.project.dummy"/>

        <TextView
            style="@style/text"
            android:text="@string/profile.user_score.project.hint"/>
    </LinearLayout>

</LinearLayout>